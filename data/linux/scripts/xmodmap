clear lock
clear mod1
clear mod4
clear mod5
! making capslock escape
keycode 66 = Escape 
!add lock = Escape

! right alt becomes left alt
keycode 108 = Alt_L
keysym h = h H Left
keysym j = j J Down
keysym k = k K Up
keysym l = l L Right

! left super becomes mode switch
keycode 133 = Mode_switch
! left alt becomes left super
keycode 64 = Super_L
add mod1 = Alt_L
add mod4 = Super_L Super_R
add mod5 = Mode_switch
